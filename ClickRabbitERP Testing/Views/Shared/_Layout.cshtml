        <script>

            $(document).ready(function () {
                popup();
            })




            function popup() {
                $('.popclick').off('click');
                //$('.popclick').on('click', function () {
                $(document).on("click", ".popclick", function () {
                    //	alert('test');
                    $('.popupMain').removeClass("popVisible");
                    $('body').removeClass('pop_bodyFixed');
                    var linkAttrib = $(this).attr('data-pop');
                    $('#' + linkAttrib).addClass("popVisible");
                    $('body').addClass('pop_bodyFixed');

                    if ($(window).width() < 991) {
                        $('body').removeClass('fixbody');
                        $('.menuDiv').removeClass('openMenu');
                        $('.menuIcon').removeClass('menuCloseActive');
                        $('.menuClose').removeClass('menuCloseActive');
                    }

                });
                $('.closePopup, .pop_overlayer, .donePop').click(function () {
                    $('.popupMain').removeClass("popVisible");
                    $('body').removeClass('pop_bodyFixed');
                });
            }

        </script>
